<resources>

  <!-- Base application theme. -->
  <style name="PaycomAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPaycomPrimary</item>
    <item name="colorPrimaryDark">@color/colorPaycomPrimaryDark</item>
    <item name="colorAccent">@color/colorPaycomAccent</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="HorizontalDivider">
    <item name="android:background">@color/divider</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_marginTop">1dp</item>
  </style>

</resources>